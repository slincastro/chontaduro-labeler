{
  "name": "chontaduro-labeler",
  "displayName": "chontaduro-labeler",
  "publisher": "slincastro",
  "description": "Extension to count lines of the active file and display it in a custom sidebar view",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:*",
    "onView:lineCounterView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lineCounterContainer",
          "title": "LineCounter",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "lineCounterContainer": [
        {
          "type": "webview",
          "id": "lineCounterView",
          "name": "LÃ­neas del archivo",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "lineCounterView.focus",
        "title": "Show LineCounterView"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}
